@model PizzaBox.Client.Models.OrderViewModel
<h2>Testing</h2>



@* HTML WAY*@
<form action="/order" method="post">
  @Html.AntiForgeryToken()
  <div class="row">
    <div class="col">
      @foreach (var item in Model.Crusts)
      {
        <div class="form-check">
          <input class="form-check-input" type="radio" asp-for="SelectedCrust" value="@item">
          <label class="form-check-label" for="@item">@item</label>
          @Html.ValidationMessageFor(m => m.SelectedCrust)
        </div>
      }
    </div>
    <div class="col">
      @foreach (var item in Model.Sizes)
      {
        <div class="form-check">
          <input class="form-check-input" type="radio" asp-for="SelectedSize" value="@item">
          <label class="form-check-label" for="@item">@item</label>
          @Html.ValidationMessageFor(m => m.SelectedSize)
        </div>
      }
    </div>
    <div class="col">
      @foreach (var item in Model.Toppings)
      {
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="@item" name="selectedtoppings" value="@item">
          <label class="form-check-label" for="@item">@item</label>
          @Html.ValidationMessageFor(m => m.SelectedToppings)
        </div>
      }
    </div>
  </div>
  <button type="submit">Select Pizza</button>
</form>

